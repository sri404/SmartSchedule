    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fouad.smartschedule.SigninActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fouad.smartschedule.MainActivity" >
        </activity>
        <activity android:name="com.fouad.smartschedule.SignupActivity" >
        </activity>
        <activity android:name="com.fouad.smartschedule.VerificationActivity" >
        </activity>
    </application>

</manifest>